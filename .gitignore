# Ignore directories generated by package managers
/vendor/
/core/
/modules/contrib/
/themes/contrib/
/profiles/contrib/
/libraries/
/*.*
!composer.json
!composer.lock
!.gitignore


# Ignore sensitive information
/sites/*/settings.php
/sites/*/settings.*.php

# Ignore Drupal's file directories
/sites/*/files/
/private/files/*
!/private/files/.gitkeep
/private/keys/*
!/private/keys/.gitkeep

# Ignore OSX indecies
.DS_Store

# Packages #
############
*.7z
*.dmg
*.gz
*.bz2
*.iso
*.jar
*.rar
*.tar
*.zip
*.tgz

# Logs and databases #
######################
*.log
*.sql